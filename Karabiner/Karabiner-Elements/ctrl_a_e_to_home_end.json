{
  "title": "Shift + Arrow Keys",
  "rules": [
    {
      "description": "Ctrl+A to Home",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [ "control" ],
              "optional": [ "caps_lock", "option", "shift" ]
            }
          },
          "to": [ { "key_code": "home" } ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Ctrl+E to End",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "e",
            "modifiers": { "mandatory": [ "control" ],
              "optional": [ "caps_lock", "option", "shift" ] }
          },
          "to": [ { "key_code": "end" } ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
