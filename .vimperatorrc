"settings {{{2
set runtimepath=$HOME/.vimperator
set visualbell
set titlestring=ViFox
set complete=sl
set gui=nonavigation
set newtab=all
set nextpattern+=next
set previouspattern+=prev
set previouspattern+=previous

" ignore pages {{{2
autocmd LocationChange .*                             js modes.passAllKeys = false
autocmd LocationChange mail\\.google\\.com            js modes.passAllKeys = true
autocmd LocationChange www\\.google\\.com/calendar    js modes.passAllKeys = true

"key mappings {{{2
nnoremap <BS> H
nnoremap j 10j
nnoremap k 10k
noremap <C-Space> <esc>
inoremap <C-Space> <esc>
noremap <C-@> <esc>
noremap <C-]> <C-z>
nnoremap h <C-p>
nnoremap l <C-n>
map <S-Left> :tabmove! -1<CR>
map <S-Right> :tabmove! +1<CR>

cnoremap <C-n> <Tab>
cnoremap <C-p> <S-Tab>

nnoremap _ ma
nnoremap } `a
cmap <C-d> <Tab>
cmap <C-i> <Tab>
cmap <C-Space> <ESC>
cmap <C-n> <Tab>
cmap <C-p> <S-Tab>

noremap <C-q> <S-ESC>
noremap <ESC><ESC> :set nohlsearch<CR>


