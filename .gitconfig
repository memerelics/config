[user]
    name  = memerelics
    email = takuya21hashimoto@gmail.com

[color]
    status = auto
    diff = auto
    branch = auto
    interactive = auto
    grep = auto

[github]
  user = memerelics

[core]
    autocrlf = input
	editor = emacs
	quotepath = false

[alias]
    loggr = log --graph --date-order --pretty=format:'%Cblue%h %Cgreen%ci %Cred%an %Cblue%m %Creset%s %Cred%d'
    logg = log --stat --pretty=format:'%Cblue%h %Cgreen%ar %Cred%an %Creset%s %Cred%d'
    logn = log --stat --pretty=format:'%Cblue%h %Cgreen%ar %Cred%an %Creset%s %Cred%d'
    logo = log --oneline --decorate
    st = status -s -b
    br = branch
    co = checkout
    r = remote -v
    re = remote -v
    a = add
    c = commit
    s = show
    f = fetch
    g = grep
    cherry = cherry -v
    # diff
    d  = diff
    dm = diff master
    dc = diff --cached
    d1 = diff HEAD~
    d2 = diff HEAD~~
    d3 = diff HEAD~~~
    d4 = diff HEAD~~~~
    d5 = diff HEAD~~~~~
[apply]
  whitespace = nowarn
[diff]
	algorithm = patience
[push]
	default = simple
[pull]
  rebase = true
[grep]
  lineNumber = true

[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less

[tig "bind"]
  generic = g move-first-line
  generic = G move-last-line

[include]
  path = .gitconfig.local

